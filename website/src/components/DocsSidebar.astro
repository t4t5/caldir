---
interface Props {
  currentSlug?: string;
}

const { currentSlug } = Astro.props;

const links = [
  { slug: "getting-started", title: "Getting started" },
  { slug: "sync", title: "Sync" },
  { slug: "commands", title: "Commands" },
  { slug: "configuration", title: "Configuration" },
  { slug: "providers", title: "Providers" },
  { slug: "filename-convention", title: "Filename convention" },
];
---

<aside class="hidden md:block w-48 shrink-0">
  <nav class="sticky top-20">
    <a href="/" class="text-muted text-sm mb-6 block hover:text-text">&larr; caldir.org</a>
    <ul class="space-y-1.5">
      {links.map((link) => (
        <li>
          <a
            href={`/docs/${link.slug}`}
            class:list={[
              "block text-sm py-0.5",
              currentSlug === link.slug
                ? "text-link font-medium"
                : "text-muted hover:text-text",
            ]}
          >
            {link.title}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</aside>
